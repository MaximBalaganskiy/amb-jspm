{
	"compilerOptions": {
		"module": "system",
		"moduleResolution": "node",
		"target": "es5",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipDefaultLibCheck": true,
		"strict": false,
		"skipLibCheck": true,
